extends ../layouts/main

block content
    .container#lesson_config_js
        .row
            .col-sm-6
                .form-group
                    label.col-form-label(for="search_name") 학생검색 : 
                    input.form-control#search_name_js(type="text")
                .form-group
                    label.col-form-label(for="diaryDay") 요일로검색:
                    select.form-control#diaryDay(name="diaryDay")
                        option(value="") 오늘요일
                        option(value="전체요일") 전체요일
                        option(value="월") 월
                        option(value="화") 화
                        option(value="수") 수
                        option(value="목") 목
                        option(value="금") 금
                        option(value="토") 토
                        option(value="일") 일
                ul#student_list_js
            .col-sm-6
                .form-group
                    label.col-form-label(for="") 학생이름:
                    input.form-control#student_name_choose(type="text", readonly, value="", placeholder="입력을 원하는 학생이름을 선택하세요")
                .form-group
                    label.col-form-label(for="") 날짜선택:
                    input.form-control#choose_date(type="date")
                .form-group
                    a.btn.btn-primary#new_input_diary(type="button", href=`/lesson${routes.lessonNew}`) 학습일지입력


                