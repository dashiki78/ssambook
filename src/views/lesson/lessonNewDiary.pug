extends ../layouts/main

block content
    .container
        h2 #{name}학생의 #{date} 학습일지 작성
        .form-container
            form.form#lesson_newForm_js(action=`/lesson${routes.lessonNew}`, method="post")
                input(type="text", name="student_id", value=student_id, hidden)
                input(type="text", name="name", value=name, hidden)
                input(type="date", name="date", value=date, hidden)
                .form-group
                    .form-check.form-check-inline
                        label(for="") 정규
                        input(type="radio", name="studyType", value="정규", checked)
                    .form-check.form-check-inline
                        label(for="") 보충
                        input(type="radio", name="studyType", value="보충")
                .form-group
                    .form-check.form-check-inline
                        label(for="") 출석
                        input(type="radio", name="attend", value="출석", checked)
                    .form-check.form-check-inline
                        label(for="") 지각
                        input(type="radio", name="attend", value="지각")
                    .form-check.form-check-inline
                        label(for="") 결석
                        input(type="radio", name="attend", value="결석")
                fieldset.homework
                    legend 숙제
                    .form-group.row.homework__fulfillment
                        label.col-sm-2(for="") 이행 :
                        .col-sm-10
                            .form-check.form-check-inline
                                label(for="") 우수
                                input(type="radio", name="fulfillment", value="우수", checked)
                            .form-check.form-check-inline
                                label(for="") 양호
                                input(type="radio", name="fulfillment", value="양호")
                            .form-check.form-check-inline
                                label(for="") 보통
                                input(type="radio", name="fulfillment", value="보통")
                            .form-check.form-check-inline
                                label(for="") 불량
                                input(type="radio", name="fulfillment", value="불량")
                            .form-check.form-check-inline
                                label(for="") 없음
                                input(type="radio", name="fulfillment", value="없음")
                    .form-group.row.homework__faithfulness
                        label.col-sm-2(for="") 충실도 :
                        input.col-sm-5.homework__faithfulness-number#faithfulness-number_js(type="number", max="100", min="0", name="faithfulness", value="100")
                    .form-group.row
                        label.col-sm-2(for="") 완성도 :
                        input.col-sm-5(type="number", max="100", min="0", name="homework_completeLevel", value="100")
                fieldset
                    legend 학습
                    button#add_unit_js 추가
                    .form-group.row.form__study-unit
                        label(for="") 학습단원 :
                        input(type="text", name="unit")
                    .form-grop.row
                        label.col-sm-2(for="") 학습량 :
                        input.col-sm-5(type="number", max="100", min="0", name="volume", value="100")
                    .form-grop.row
                        label.col-sm-2(for="") 완성도 :
                        input.col-sm-5(type="number", max="100", min="0", name="study_completeLevel", value="100")
                button#test_insert_js 테스트입력
                .test
                .form-group.row
                    label(for="") 비고 :
                    textarea(name="note", cols="70", rows="10")
                input(type="submit")